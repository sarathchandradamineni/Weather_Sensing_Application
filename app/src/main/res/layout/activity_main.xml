<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_img"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:id="@+id/location_search_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">


            <EditText
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toEndOf="@+id/imageView"
                android:alpha="0.8"
                android:background="@drawable/borders"
                android:ems="10"
                android:gravity="left"
                android:hint="Enter the Location"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:text="" />

        </RelativeLayout>

        <Button
            android:id="@+id/checkWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location_search_relative_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:alpha="0.8"
            android:background="@drawable/borders"
            android:onClick="checkWeather"
            android:padding="20dp"
            android:paddingTop="20dp"
            android:text="Check the Weather" />
    </RelativeLayout>



    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="97dp"
        android:onClick="getAutoAddress"
        android:text="Detect my Location"
        android:padding="10dp"
        android:background="@drawable/borders"/>

</RelativeLayout>